@using Swensens.Web.ViewModels
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="card my-5"
             style="max-width:480px;margin:0 auto; border-radius:20px;overflow:hidden">
            <div class="bg-danger" style="height:240px;width:480px;">
                <img src="/Images/bglogin.png" 
                     style="display:flex;padding:0;margin:0" />
            </div>
            <form asp-action="Login" method="post" class="mt-5 px-3">
                <div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-1">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control px-5" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-1 py-2">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-row-reverse p-2">
                        <a href="#" style="color:#e21c23;"> 
                            ลืมรหัสผ่าน
                        </a>
                    </div>
                    <input type="submit" value="เข้าสู่ระบบ" class="btn btn-danger m-4 py-3" style="width:400px;border-radius:30px" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
